{
  // Cloudflare Worker configuration for Arke Upload Frontend
  "name": "arke-upload-frontend",
  "main": "src/index.ts",
  "compatibility_date": "2024-11-01",
  "compatibility_flags": ["nodejs_compat"],

  // Worker settings
  "workers_dev": true,

  // Environment variables (optional)
  "vars": {
    "INGEST_WORKER_URL": "https://ingest.arke.institute",
    "ARKE_INSTITUTE_URL": "https://arke.institute"
  },

  // Service bindings
  "services": [
    {
      "binding": "ORCHESTRATOR",
      "service": "arke-orchestrator"
    },
    {
      "binding": "INGEST",
      "service": "arke-ingest-worker"
    }
  ],

  "routes": [
    {
      "pattern": "upload.arke.institute",
      "custom_domain": true
    }
  ]
}
