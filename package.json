{
  "name": "arke-upload-frontend",
  "version": "1.0.0",
  "description": "Cloudflare Worker frontend for Arke Institute upload server",
  "main": "src/index.ts",
  "scripts": {
    "copy:sdk": "node scripts/copy-sdk.js",
    "build:client": "esbuild src/client/main.ts --bundle --minify --sourcemap --target=es2020 --format=iife --outfile=dist/client.js",
    "inject:client": "node scripts/inject-client.js",
    "build": "npm run copy:sdk && npm run build:client && npm run inject:client",
    "postinstall": "npm run copy:sdk",
    "watch:client": "npm run build:client -- --watch",
    "dev": "npm run build && wrangler dev",
    "dev:watch": "concurrently \"npm run watch:client\" \"wrangler dev\"",
    "deploy": "npm run build && wrangler deploy",
    "tail": "wrangler tail",
    "test:monitor": "tsx test/upload-monitor.ts"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "upload",
    "arke"
  ],
  "author": "Arke Institute",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "wrangler": "^4.47.0"
  },
  "dependencies": {
    "@arke/upload-client": "github:Arke-Institute/upload-client#main"
  }
}
